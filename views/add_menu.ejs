<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
  <link rel="stylesheet" href="/styles/dashboard.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <link rel="stylesheet" href="/styles/add_menu.css" type="text/css" />

  <title>Noodles Express</title>
</head>

<body>
  <%- include('partials/_header') %>

  <div class="mainContainer m-5">
    <div class="currentOrderContainer d-flex flex-column m-5">
      <h2 class="currentOrderTitle w-100">All Menu</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID #</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for(let menu of data) { %>
            <tr>
              <td>
                <%= menu.id %>
              </td>
              <td>
                <%= menu.item_name %>
              </td>
              <td>
                <%= menu.price %>
              </td>
              <td>
                <%= menu.category %>
              </td>
              <td>
                <form class="form-inline" action="/dashboard/delete_menu" method="POST">
                  <input type="hidden" class="form-control" type="text" name="menu_id" value="<%= menu.id %>">
                  <button type="submit" class="btn btn-primary">Delete</button>
                </form>

              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
    </div>
  </div>
  <br>






    <div class="mainContainer m-5">
      <div class="menu__body">
        <h2>ADD NEW MENU</h2>
        <form action="/dashboard/add_menu" method="POST">
          <div class="form-group">
            <label for="itemName">Item Name</label>
            <input type="text" class="form-control" id="itemName" name="item_name" placeholder="Beef Noodles">
          </div>
          <div class="form-group">
            <label for="itemPrice">Item Price</label>
            <input type="text" class="form-control" id="itemPrice" name="price" placeholder="$12">
          </div>
          <div class="form-group">
            <label for="itemDescription">Item Description</label>
            <textarea class="form-control" id="itemDescription" rows="2" name="description" placeholder="Beef and noodles"></textarea>
          </div>
          <div class="form-group">
            <label for="imageUrl">Image URL</label>
            <input type="url" class="form-control" id="imageUrl" name="image_url" placeholder="">
          </div>
          <div class="form-group">
            <label for="thumbnailUrl">Thumbnail URL</label>
            <input type="url" class="form-control" id="thumbnailUrl" name="thumbnail_url" placeholder="">
          </div>
          <div class="form-group">
            <label for="category">Category</label>
            <input type="text" class="form-control" id="category" name="category" placeholder="Main">
          </div>
          <br>
          <a href="/order"><button type="addItemToMenu" class="btn btn-primary">Add item to Menu</button></a>
        </form>
      </div>
      </tbody>
    </div>

</body>

</html>
